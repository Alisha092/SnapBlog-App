<% layout('layouts/boilerplate') %>
<div class="container my-3">
  <%- include('../partials/flash')%>

  <div class="card p-3 mb-3">
    <a href="/posts/<%=post._id%>" class="btn btn-danger btn-sm mx-2">Cancel Edit</a>
  </div>

  <div class="card p-2" style="width: 100%;">

    <div class="card-body">

      <form action="/posts/<%=post._id%>?_method=PATCH" method="post">

          <div class="form-group mb-3">
            <label for="topic">Topic</label>
            <input type="text" class="form-control" id="topic" name="topic" value="<%=post.topic%>" required>
          </div>

          <div class="form-group mb-3">
            <label for="text">Content : </label>
            <textarea class="form-control" name="text" id="text" rows="10" ><%=post.text%></textarea>
          </div>


        <button class="submit-btn btn">Edit Post</button>

      </form>

    </div>


  </div>


</div>

